generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  email    String @unique
  imageUrl String
  Cart     Cart?
}

model CartLineItem {
  id              String @id
  sanityProductId String
  quantity        Int

  title String
  price Float
  image String

  cartId String
  cart   Cart   @relation(references: [id], fields: [cartId], onDelete: Cascade)
}

model Cart {
  id String @id
  userId String? @unique
  user   User?   @relation(references: [id], fields: [userId], onDelete: Cascade)
  items CartLineItem[]
}
